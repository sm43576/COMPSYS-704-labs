<System xmlns="http://systemjtechnology.com">
	<SubSystem Name="SS1" Local="true">
		<ClockDomain Name="HumanPresenceCD" Class="HumanPresence">
		
			<iChannel Name="zone1P" From="InfraredSensorCD.zone1P" />
			<iChannel Name="zone2P" From="InfraredSensorCD.zone2P" />
			<iChannel Name="zone3P" From="InfraredSensorCD.zone3P" />
			<iChannel Name="zone4P" From="InfraredSensorCD.zone4P" />
			<iChannel Name="zone5P" From="InfraredSensorCD.zone5P" />
			<iChannel Name="zone6P" From="InfraredSensorCD.zone6P" />
			<iChannel Name="zone7P" From="InfraredSensorCD.zone7P" />
			
			<oSignal Name="zone1Light" To="ecsUI.zone1Light" Class="com.systemj.ipc.SimpleClient" IP="127.0.0.1" Port="20010" />
			<oSignal Name="zone2Light" To="ecsUI.zone3Light" Class="com.systemj.ipc.SimpleClient" IP="127.0.0.1" Port="20010" />
			<oSignal Name="zone3Light" To="ecsUI.zone3Light" Class="com.systemj.ipc.SimpleClient" IP="127.0.0.1" Port="20010" />
			<oSignal Name="zone4Light" To="ecsUI.zone3Light" Class="com.systemj.ipc.SimpleClient" IP="127.0.0.1" Port="20010" />
			<oSignal Name="zone5Light" To="ecsUI.zone3Light" Class="com.systemj.ipc.SimpleClient" IP="127.0.0.1" Port="20010" />
			<oSignal Name="zone6Light" To="ecsUI.zone3Light" Class="com.systemj.ipc.SimpleClient" IP="127.0.0.1" Port="20010" />
			<oSignal Name="zone7Light" To="ecsUI.zone3Light" Class="com.systemj.ipc.SimpleClient" IP="127.0.0.1" Port="20010" />	
		</ClockDomain>
		
		
		<ClockDomain Name="InfraredSensorCD" Class="InfraredSensor">
			<oChannel Name="zone1P" To="HumanPresenceCD.zone1P"/>
			<oChannel Name="zone2P" To="HumanPresenceCD.zone2P"/>
			<oChannel Name="zone3P" To="HumanPresenceCD.zone3P"/>
			<oChannel Name="zone4P" To="HumanPresenceCD.zone4P"/>
			<oChannel Name="zone5P" To="HumanPresenceCD.zone5P"/>
			<oChannel Name="zone6P" To="HumanPresenceCD.zone6P"/>
			<oChannel Name="zone7P" To="HumanPresenceCD.zone7P"/>
		</ClockDomain>

	
		<ClockDomain Name="TemperatureSensorCD" Class="TemperatureSensor">
			<iSignal Name="getTemp1R" Class="com.systemj.ipc.SimpleServer" IP="127.0.0.1" Port="10000" />
			<oSignal Name="getTemp1" To="PlantCD.getTemp1" Class="com.systemj.ipc.SimpleClient" IP="127.0.0.1" Port="10001" />
			<oSignal Name="window1" To="PlantCD.window1" Class="com.systemj.ipc.SimpleClient" IP="127.0.0.1" Port="10001" />
			<oSignal Name="zone1Temp" To="ecsUI.zone1Temp" Class="com.systemj.ipc.SimpleClient" IP="127.0.0.1" Port="20011" />
		</ClockDomain>
		
		
		<ClockDomain Name="HumiditySensorCD" Class="HumiditySensor">
			<iSignal Name="getHumid4R" Class="com.systemj.ipc.SimpleServer" IP="127.0.0.1" Port="10000" />
			<oSignal Name="getHumid4" To="PlantCD.getHumid4" Class="com.systemj.ipc.SimpleClient" IP="127.0.0.1" Port="10001" />
			<oSignal Name="airconHumid4" To="PlantCD.airconHumid4" Class="com.systemj.ipc.SimpleClient" IP="127.0.0.1" Port="10001" />
			<oSignal Name="zone4Humid" To="ecsUI.zone4Humid" Class="com.systemj.ipc.SimpleClient" IP="127.0.0.1" Port="20012" />
		</ClockDomain>
		</SubSystem>
</System>
